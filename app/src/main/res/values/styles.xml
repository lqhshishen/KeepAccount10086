<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
    </style>
    
    <style name="TabAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarStyle">
        <item name="android:textColor">@color/topMoney</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarWeekStyle">
        <item name="android:textColor">@color/topText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalendarHeadStyle">
        <item name="android:textColor">@color/topMoney</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CalendarBlackStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="pop_anim">
        <item name="android:windowEnterAnimation">@anim/pop_buttom_in</item>
        <item name="android:windowExitAnimation">@anim/pop_buttom_out</item>
    </style>

</resources>
